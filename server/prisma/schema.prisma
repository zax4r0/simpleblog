generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String
  name     String?
  posts    Post[]

  @@map("users")
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  title     String
  content   String?
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  String?
  published Boolean  @default(false)

  @@map("posts")
}
